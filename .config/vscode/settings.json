{
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.editor.showTabs": "multiple",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.activityBar.location": "top",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.tree.enableStickyScroll": true,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",
    "explorer.compactFolders": false,
    // "window.titleBarStyle": "custom",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.lightbulb.enabled": "off",
    "editor.fontSize": 12,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "update.mode": "none",
    // "editor.stickyScroll.enabled": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/pkg": true,
        "**/dist": true
    },
    "custom-ui-style.stylesheet": {
        ".monaco-workbench .part.titlebar>.titlebar-container": "display: none",
        ".quick-input-widget": "top: 25vh !important",
        ".quick-input-widget .scrollbar": "display: none",
        ".monaco-editor .find-widget.visible": "box-shadow: none; top: 20px !important; border: 1px solid rgba(255, 255, 255, .5); border-radius: 4px;",
        ".monaco-editor .find-widget .monaco-sash": "display: none",
        ".editor-group-watermark>.letterpress": "display: none !important",
        ".monaco-action-bar .actions-container": "justify-content: space-around",
        "#workbench\\.parts\\.sidebar > div.composite.has-composite-bar.header-or-footer.header > div > div": "flex: 1",
        "#workbench.palts.sidebar > div.composite.has-composite-bar.header-or-footer.header > div > div > div > ul": "justify-content: space-around"
    },
    "workbench.colorCustomizations": {
        "terminal.background": "#00000000"
    },
    "terminal.integrated.gpuAcceleration": "off",
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] }, 

        {
            "before": ["leader", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["leader", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["leader", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["leader", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },

        { "before": ["leader", "w"], "commands": [":w!"] },
        { "before": ["leader", "q"], "commands": [":q!"] },
        { "before": ["leader", "x"], "commands": [":x!"] },
        { "before": ["leader", "b", "d"], "commands": [":q"] },
        {
            "before": ["x"],
            "after": [ "\"", "_", "d" ]
        },
        {
            "before": ["x", "x"],
            "after": [ "\"", "_", "d", "d" ]
        },
        {
            "before": ["leader", "e"], 
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["leader","/"],
            "commands": [
                "editor.action.commentLine"
            ]
        },
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["leader", "f", "f"],
            "commands": [ "workbench.action.quickOpen" ]
        },

        {
            "before": ["leader", "s", "g"],
            "commands": [ "workbench.action.quickTextSearch" ]
        },

        {
            "before": ["leader", "s", "b"],
            "commands": [ "editor.actions.findWithArgs" ]
        },

        {
            "before": ["leader", "c", "f"],
            "commands": [ "editor.action.formatDocument" ]
        },

        { "before": ["leader", "s", "v"], "commands": [":vsplit"] },
        { "before": ["leader", "s", "s"], "commands": [":split"] },

    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["x"],
            "after": [ "\"", "_", "d" ]
        },
        {
            "before": [">"],
            "after": [ ">", "g", "v" ]
        },
        {
            "before": ["<"],
            "after": [ "<", "g", "v" ]
        },
        {
            "before": ["leader", "c", "f"],
            "commands": [ "editor.action.formatSelection" ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["leader", "/"], 
            "commands": ["editor.action.commentLine"]
        },
    ],
}
